# ──────────────
# 📦 FÄRGER OCH UTSEENDE
# ──────────────
background                 #1a1a1a
foreground                 #cccccc
selection_background       #44475a
selection_foreground       #ffffff
cursor                     #de2525

# 🔲 GENOMSKINLIGHET
background_opacity         0.7

# 🖼️ TECKENSNITT
font_family                Tinos Nerd Font
# fallback_family            Symbols Nerd Font
font_size                  11
bold_font                  auto
italic_font                auto

# 🎨 FÖNSTER OCH KANTER
window_padding_width       8
hide_window_decorations    yes

# 🎨 SCROLL
scrollback_lines           10000

# 🚀 PRESTANDA OCH LJUD
enable_audio_bell          no
allow_remote_control       yes

# ⌨️ TANGENTKOMMANDON
map ctrl+shift+c copy_to_clipboard
map ctrl+shift+v paste_from_clipboard

# ⚡ AUTOKOMMANDON VID START
fastfetch
shell fish

